<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class = "card-img" src="<%= campground.image %>" alt="">
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href=""><%= campground.name %></a></h4>
                    <p class="card-text"> <%= campground.description%> </p>
                    <p><em>Submitted by <%= campground.author.username %> </em> </p>
                    
                    <form class="form-inline " action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">                  
                        <a class = "btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <button class="btn btn-danger m-1">Delete</button>
                     </form>
                </div>
            </div>
            <div class="card border-secondary bg-gradient-info">
                <div class="text-right">
                        <a class = "btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                              <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>






<% include ../partials/footer %>