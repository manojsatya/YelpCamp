<% include ../partials/header %>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3 col-lg-6">
            <h1 class="text-center">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-sm" type="text" name="campground[name]" id="" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm" type="number" name="campground[price]" id="" value="<%= campground.price %>" min="1.0" step="0.5">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm" type="text" name="campground[image]" id="" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm" type="text" name="campground[description]" id="" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-secondary btn-block"> Submit!</button>
                </div>      
            </form>
            <a href="/campgrounds"> Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>